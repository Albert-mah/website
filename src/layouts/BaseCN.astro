import ShapeFooter from "../components/ShapeFooter.astro";
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import DocSearch from "../components/DocSearch.astro";

const year = new Date().getFullYear();
const baseClassName = Astro.url.pathname.split("/")?.[2] || "";

// 定义支持的语言列表
const supportedLanguages = ['en', 'cn', 'ja', 'ru'];
// 获取当前路径
const currentPath = Astro.url.pathname;

// 正则表达式匹配以 /en/、/cn/、/ja/ 或 /ru/ 开头的路径
const langPrefixRegex = /^\/(en|cn|ja|ru)(\/|$)/;

// 函数用于生成不同语言的 URL
const generateUrl = (lang: string) => {
  if (langPrefixRegex.test(currentPath)) {
    // 替换现有的语言前缀
    return currentPath.replace(langPrefixRegex, `/${lang}/`);
  } else {
    // 如果没有语言前缀，则添加新的语言前缀
    return `/${lang}${currentPath}`;
  }
};

// 生成各语言的 URL
let urlCN = generateUrl('cn').replace(/\/$/, ''); // 移除结尾的斜杠以避免重复
let urlJA = generateUrl('ja').replace(/\/$/, '');
let urlEN = generateUrl('en').replace(/\/$/, '');
let urlRU = generateUrl('ru').replace(/\/$/, '');

// 特殊处理根路径
if (currentPath === '/cn' || currentPath === '/en' || currentPath === '/ja' || currentPath === '/ru') {
  urlCN = '/cn';
  urlEN = '/';
  urlJA = '/ja';
  urlRU = '/ru';
}

// 确保英文主页是 '/'
if (urlEN === '/en') {
  urlEN = '/';
}

const { title, description, keywords, image } = Astro.props;

const meta = {
  image: image || 'https://static-docs.nocobase.com/20250223-173129.jpg',
  title: title
      ? `${title} - NocoBase`
      : "NocoBase - 开源、私有部署的 AI 员工驱动的零代码和低代码开发平台",
  description:
      description ||
      "NocoBase是一款开源、可私有部署的由 AI 员工驱动的零代码和低代码开发平台，无需开发，即可快速构建智能业务系统。不同于封闭的无代码工具，NocoBase 基于数据模型驱动，通过插件架构实现灵活扩展，适配复杂业务场景。无需SaaS订阅，数据自主可控，让数字化更高效、更自由、更经济。",
  keywords:
      keywords ||
      "nocobase,AI,AI员工,AI Employees,低代码,无代码,零代码,私有部署,开源,no-code,low-code,open-source,零代码开发,低代码开发,工作流管理软件,业务流程管理,协作软件,企业流程管理,企业管理系统,零代码系统,零代码平台,零代码搭建,免费零代码开发平台,无代码系统,无代码平台,无代码搭建,免费无代码开发平台",
};
